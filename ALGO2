def CreatePlayerBson(L):
    pdic={}
    pdic['prev']=str(L[1][L[1].find('(')+1:L[1].find(')')])
    pdic['pos']=str(L[2])
    pdic['name']=L[3]
    pdic['country']=L[4]
    pdic['points']=str(L[5])
    pdic['inactiveperiods']=str(L[-1])
    print(pdic)
#     players.insert_one(pdic)
    return 'done'
CreatePlayerBson(NewLLforBson[-1])
